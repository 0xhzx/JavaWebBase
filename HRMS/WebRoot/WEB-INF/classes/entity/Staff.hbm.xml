<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.test.propertyref.inheritence.union">

	<class name="entity.Staff" table="STAFF">
		<id name="sid" type="string">
			<generator class="assigned" />
		</id>
		<property name="address" type="string" />
		<property name="birthday" type="date" />
		<property name="idCard" type="string" />
		<property name="job" type="string" />
		<property name="level" type="string" />
		<property name="name" type="string" />
		<property name="nation" type="string" />
		<property name="phone" type="string" />
		<property name="sex" type="string" />
		<property name="worktime" type="date" />
	</class>

</hibernate-mapping>